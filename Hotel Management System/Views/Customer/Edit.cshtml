@model Hotel_Management_System.Models.DTOs.CustomerEditDTO
@{
    ViewData["Title"] = "تعديل بيانات العميل";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">تعديل بيانات العميل</h2>

<form asp-action="Edit" method="post" class="bg-white p-4 rounded shadow-sm">

    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="FirstName" class="form-label"></label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="LastName" class="form-label"></label>
            <input asp-for="LastName" class="form-control" />
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Gender" class="form-label"></label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label asp-for="DateOfBirth" class="form-label"></label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label"></label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label"></label>
        <select asp-for="Role" class="form-control" asp-items="@(new SelectList(ViewBag.Roles))"></select>
    </div>

    <button type="submit" class="btn btn-primary">حفظ التعديلات</button>
    <a asp-action="Index" class="btn btn-secondary">رجوع</a>
</form>
