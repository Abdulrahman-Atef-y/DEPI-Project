@model IEnumerable<Hotel_Management_System.Models.DTOs.CustomerDTO>
@{
    ViewData["Title"] = "إدارة العملاء";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin-room.css" asp-append-version="true" />

<div class="admin-index-root">
<div class="admin-header">
        <h2><i class="admin-title"></i> إدارة العملاء</h2>
        <a asp-action="Create" class="admin-create-btn">
    <i class="fas fa-user-plus"></i> إضافة عميل
</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
    <div class="admin-table-wrapper">
        <div class="admin-table-container">
            <table class="table admin-table">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>البريد الإلكتروني</th>
                <th>الهاتف</th>
                <th>الهوية</th>
                <th>تاريخ التسجيل</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FullName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Role</td>
                    <td>@item.CreatedAt.ToShortDateString()</td>
                            <td class="admin-action-group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="admin-action-btn admin-edit">
                            <i class="fas fa-edit"></i> تعديل
                        </a>
                      <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                        onsubmit="return confirm('هل أنت متأكد من حذف هذا العميل؟');" style="display:inline;">
                           <button type="submit" class="admin-action-btn admin-delete">
                              حذف
                           </button>
                       </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>
</div>