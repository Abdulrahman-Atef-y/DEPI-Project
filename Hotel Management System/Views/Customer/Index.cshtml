@model IEnumerable<Data_Access_Layer.Entities.Guest>
@{
    ViewData["Title"] = "إدارة العملاء";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2><i class="fas fa-users-cog"></i> إدارة العملاء</h2>

<div class="table-responsive" style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <table class="table" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="border-bottom: 2px solid #eee; text-align: right;">
                <th style="padding: 15px;">الاسم</th>
                <th style="padding: 15px;">البريد الإلكتروني</th>
                <th style="padding: 15px;">الهاتف</th>
                <th style="padding: 15px;">تاريخ التسجيل</th>
                <th style="padding: 15px;">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 15px;">@item.FirstName @item.LastName</td>
                    <td style="padding: 15px;">@item.Email</td>
                    <td style="padding: 15px;">@item.PhoneNumber</td>
                    <td style="padding: 15px;">@item.CreatedAt.ToShortDateString()</td>
                    <td style="padding: 15px;">
                        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('هل أنت متأكد من حذف هذا العميل؟')" style="color: #e74c3c;">
                            <i class="fas fa-trash"></i> حذف
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>