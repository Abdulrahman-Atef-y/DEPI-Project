<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - لوحة التحكم</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <style>
        /* Minimal Admin overrides */
        body {
            background-color: #f8f9fa;
        }

        .admin-sidebar {
            background: #2c3e50;
            color: white;
            min-height: 100vh;
            padding: 20px;
        }

        .admin-content {
            padding: 30px;
        }
    </style>
</head>
<body>
    <div style="display: flex;">
        <!-- Sidebar -->
        <aside class="admin-sidebar" style="width: 250px;">
            <h3><i class="fas fa-user-shield"></i> لوحة الإدارة</h3>
            <ul style="list-style: none; margin-top: 20px; padding: 0;">
                <li style="margin-bottom: 15px;">
                    <a asp-controller="Admin" asp-action="Dashboard" style="color: white; text-decoration: none;">
                        <i class="fas fa-tachometer-alt"></i> الرئيسية
                    </a>
                </li>
                <li style="margin-bottom: 15px;">
                    <a asp-controller="Customer" asp-action="Index" style="color: white; text-decoration: none;">
                        <i class="fas fa-users-cog"></i> إدارة العملاء
                    </a>
                </li>
                <li style="margin-bottom: 15px;">
                    <a asp-controller="BookingManagement" asp-action="Index" style="color: white; text-decoration: none;">
                        <i class="fas fa-calendar-alt"></i> إدارة الحجوزات
                    </a>
                </li>
                <li style="margin-bottom: 15px;">
                    <a asp-controller="Room" asp-action="Index" style="color: white; text-decoration: none;">
                        <i class="fas fa-bed"></i> إدارة الغرف
                    </a>
                <li style="margin-bottom: 15px;">
                    <a asp-controller="RoomType" asp-action="Index" style="color: white; text-decoration: none;">
                        <i class="fas fa-layer-group"></i> إدارة الفئات
                    </a>
                </li>
                <li style="margin-bottom: 15px;">
                    <a asp-controller="Reports" asp-action="Index" style="color: white; text-decoration: none;">
                        <i class="fas fa-chart-line"></i> التقارير
                    </a>
                </li>
                <!-- Add RoomType, Booking links later -->
                <li style="margin-bottom: 15px;">
                    <a asp-controller="Home" asp-action="Index" style="color: #3498db; text-decoration: none;">
                        <i class="fas fa-arrow-right"></i> العودة للموقع
                    </a>
                </li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="admin-content" style="flex: 1;">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success" style="background: #d4edda; color: #155724; padding: 15px; border-radius: 5px; margin-bottom: 20px;">
                    @TempData["SuccessMessage"]
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>