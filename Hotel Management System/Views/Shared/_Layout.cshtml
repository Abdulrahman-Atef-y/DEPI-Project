@using Data_Access_Layer.Entities
@using Microsoft.AspNetCore.Identity
@inject UserManager<Guest> UserManager
@inject SignInManager<Guest> SignInManager

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - جراند هوتيل</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;500;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="loading-screen" id="loadingScreen">
        <div class="loading-content">
            <div class="hotel-icon">
                <i class="fas fa-hotel"></i>
            </div>
            <h2>جراند هوتيل</h2>
            <div class="loading-spinner"></div>
        </div>
    </div>

    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a asp-controller="Home" asp-action="Index" style="text-decoration:none">
                    <i class="fas fa-hotel"></i>
                    <span>جراند هوتيل</span>
                </a>
            </div>

            <ul class="nav-menu" id="navMenu">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" style="text-decoration:none">الرئيسية</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Rooms" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Rooms" ? "active" : "")" style="text-decoration:none">الغرف</a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {

                    var currentUser = await UserManager.GetUserAsync(User);
                    string initials = "";
                    if (currentUser != null)
                    {
                        if (!string.IsNullOrEmpty(currentUser.FirstName)) initials += currentUser.FirstName[0];
                        if (!string.IsNullOrEmpty(currentUser.LastName)) initials += currentUser.LastName[0];
                    }
                    initials = initials.ToUpper();
                    <li class="nav-item">
                        <a asp-controller="Booking" asp-action="MyBookings" class="nav-link" style="text-decoration:none">حجوزاتي</a>
                    </li>
                    <li class="nav-item">
                        <div class="user-nav">
                            <div class="user-avatar" style="width:40px; height:40px; border-radius:50%; background:#667eea; color:white; display:flex; align-items:center; justify-content:center; font-weight:bold;">
                                @initials
                            </div>
                            <span>@($"{currentUser?.FirstName} {currentUser?.LastName}")</span>
                            <div class="user-dropdown">
                                <div class="user-dropdown">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-controller="Admin" asp-action="Dashboard" style="text-decoration:none"><i class="fas fa-tachometer-alt"></i> لوحة التحكم</a>
                                    }
                                    <a asp-controller="Account" asp-action="Logout" style="text-decoration:none"><i class="fas fa-sign-out-alt"></i> تسجيل الخروج</a>
                                </div>
                            </div>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item" id="authNavItem">
                        <a asp-controller="Account" asp-action="Login" class="btn-login" style="text-decoration:none">
                            <i class="fas fa-sign-in-alt"></i>
                            تسجيل الدخول
                        </a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Register" class="btn-admin" style="text-decoration:none">
                            <i class="fas fa-user-plus"></i>
                            حساب جديد
                        </a>
                    </li>
                }
            </ul>

            <div class="nav-toggle" id="navToggle">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
    </nav>
    <div class="wrapper">
        <main role="main">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="notification notification-success">
                    <i class="fas fa-check-circle"></i>
                    <span>@TempData["SuccessMessage"]</span>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="notification notification-error">
                    <i class="fas fa-exclamation-circle"></i>
                    <span>@TempData["ErrorMessage"]</span>
                </div>
            }

            @RenderBody()
        </main>

        <footer class="footer">
            <div class="container">
                <div class="footer-content">
                    <div class="footer-section">
                        <h3>تواصل معنا</h3>
                        <div class="contact-info">
                            <p><i class="fas fa-envelope"></i> info@grandhotel.com</p>
                            <p><i class="fas fa-phone"></i> +20 123 456 7890</p>
                            <p><i class="fas fa-map-marker-alt"></i> القاهرة، مصر</p>
                        </div>
                    </div>
                    <div class="footer-section">
                        <h3>روابط سريعة</h3>
                        <ul class="footer-links">
                            <li><a asp-controller="Home" asp-action="Index" style="text-decoration:none">الرئيسية</a></li>
                            <li><a asp-controller="Rooms" asp-action="Index" style="text-decoration:none">الغرف</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><a asp-controller="Booking" asp-action="MyBookings" style="text-decoration:none">حجوزاتي</a></li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="footer-bottom">
                    <p>&copy; @DateTime.Now.Year جراند هوتيل. جميع الحقوق محفوظة.</p>
                </div>
            </div>
        </footer>
    </div>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>