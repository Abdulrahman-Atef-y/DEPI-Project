@model Hotel_Management_System.Controllers.RegisterViewModel


@{
    Layout = "/Views/Shared/_Layout1.cshtml";
    ViewData["Title"] = "Create Account";
}

<section class="rooms-section" style="min-height: 80vh; display: flex; align-items: center; justify-content: center;">
    <div class="container" style="max-width: 600px;">
        <div class="modal-content" style="box-shadow: var(--shadow-lg);">
            <div class="modal-header">
                <h2><i class="fas fa-user-plus"></i> إنشاء حساب جديد</h2>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert error">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <form asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="FirstName">الإسم الأول</label>
                        <input asp-for="FirstName" placeholder="الإسم الأول" />
                        <i class="fas fa-user input-icon"></i>
                        <span asp-validation-for="FirstName" style="color:red; font-size:0.8rem;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName">الإسم الأخير</label>
                        <input asp-for="LastName" placeholder="الإسم الأخير" />
                        <i class="fas fa-user input-icon"></i>
                        <span asp-validation-for="LastName" style="color:red; font-size:0.8rem;"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input asp-for="Email" placeholder="البريد الإلكتروني" />
                    <i class="fas fa-envelope input-icon"></i>
                    <span asp-validation-for="Email" style="color:red; font-size:0.8rem;"></span>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label asp-for="DateOfBirth">تاريخ الميلاد</label>
                        <input asp-for="DateOfBirth" type="date" />
                        <i class="fas fa-calendar input-icon"></i>
                        <span asp-validation-for="DateOfBirth" style="color:red; font-size:0.8rem;"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender">الجنس</label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Data_Access_Layer.Entities.Gender>()">
                            <option value="">اختار الجنس</option>
                        </select>
                        <i class="fas fa-venus-mars input-icon"></i>
                        <span asp-validation-for="Gender" style="color:red; font-size:0.8rem;"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Password">كلمة المرور</label>
                    <input asp-for="Password" placeholder="كلمة المرور" />
                    <i class="fas fa-lock input-icon"></i>
                    <span asp-validation-for="Password" style="color:red; font-size:0.8rem;"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword">تأكيد كلمة المرور</label>
                    <input asp-for="ConfirmPassword" placeholder="تأكيد كلمة المرور" />
                    <i class="fas fa-lock input-icon"></i>
                    <span asp-validation-for="ConfirmPassword" style="color:red; font-size:0.8rem;"></span>
                </div>

                <button type="submit" class="btn-primary">إنشاء الحساب</button>
            </form>

            <div class="modal-footer">
                <p>لديك حساب بالفعل؟ <a asp-action="Login">تسجيل الدخول</a></p>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}