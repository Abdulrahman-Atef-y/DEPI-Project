@model Hotel_Management_System.Models.DTOs.LoginDTO
@{
    ViewData["Title"] = "تسجيل الدخول";
}

<div class="modal" style="display: flex; position: relative; min-height: 80vh; background: linear-gradient(135deg, #2c3e50, #3498db); padding: 50px 0;">
    <div>
        <div class="modal-content" style="padding: 45px;">
            <div class="modal-header">
                <h2><i class="fas fa-sign-in-alt"></i> تسجيل الدخول</h2>
            </div>

            <div asp-validation-summary="ModelOnly" class="alert error"></div>

            <form asp-action="Login">
                <div class="form-group">
                    <label asp-for="Email">البريد الإلكتروني</label>
                    <input asp-for="Email" placeholder="أدخل بريدك الإلكتروني" />
                    <i class="fas fa-envelope input-icon"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">كلمة المرور</label>
                    <input asp-for="Password" placeholder="أدخل كلمة المرور" />
                    <i class="fas fa-lock input-icon"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-options">
                    <label class="checkbox">
                        <input asp-for="RememberMe" />
                        <span class="checkmark"></span>
                        تذكرني
                    </label>
                </div>
                <button type="submit" class="btn-primary">تسجيل الدخول</button>
            </form>
            <div class="modal-footer">
                <p>ليس لديك حساب؟ <a asp-action="Register" style="text-decoration:none">إنشاء حساب جديد</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}