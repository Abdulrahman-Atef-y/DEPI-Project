@model IEnumerable<Data_Access_Layer.Entities.Booking>
@{
    ViewData["Title"] = "حجوزاتي";
}

<div class="container mt-5">
    <h2><i class="fas fa-list"></i> سجل الحجوزات</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning mt-4">
            لا توجد حجوزات سابقة. <a asp-controller="Home" asp-action="Index">احجز غرفتك الآن!</a>
        </div>
    }
    else
    {
        <div class="bookings-list mt-4">
            @foreach (var item in Model)
            {
                <div class="card mb-3 shadow-sm">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-md-4">
                                <h5>رقم الغرفة: @item.Room.RoomNumber</h5>
                                <span class="badge badge-success">@item.Status</span>
                            </div>
                            <div class="col-md-4">
                                <p class="mb-0"><i class="fas fa-calendar-in"></i> دخول: @item.CheckInDate.ToShortDateString()</p>
                                <p class="mb-0"><i class="fas fa-calendar-out"></i> خروج: @item.CheckOutDate.ToShortDateString()</p>
                            </div>
                            <div class="col-md-4 text-right">
                                <h4>@item.TotalPrice.ToString("C")</h4>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>