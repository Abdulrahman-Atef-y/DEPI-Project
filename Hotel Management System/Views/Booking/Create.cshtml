@model Hotel_Management_System.Models.DTOs.BookingDTO
@{
    ViewData["Title"] = "حجز الغرفة";
}
<link rel="stylesheet" href="~/css/admin-roomtype.css" />

<div class="container mt-5" style="padding-top:120px;">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg p-4" style="border-radius:14px;">
                <div class="row g-4">
                    <div class="col-md-6">
                <h3 class="fw-bold mb-3 text-primary">
                    <i class="fas fa-calendar-alt"></i> حجز @Model.RoomTypeName
                </h3>
                <div class="alert alert-info mb-4">
                            <strong>سعر الليلة:</strong> @Model.PricePerNight.ToString("C")
                        </div>

                    <form asp-action="Create">
                        <input type="hidden" asp-for="RoomTypeId" />
                        <input type="hidden" asp-for="PricePerNight" />
                        <input type="hidden" asp-for="RoomTypeName" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row g-3">
                            <div class="col-md-6">
                                    <label asp-for="CheckInDate" class="form-label fw-semibold">تاريخ الدخول</label>
                                <input asp-for="CheckInDate" class="form-control" type="date" />
                                <span asp-validation-for="CheckInDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                    <label asp-for="CheckOutDate" class="form-label fw-semibold">تاريخ الخروج</label>
                                <input asp-for="CheckOutDate" class="form-control" type="date" />
                                <span asp-validation-for="CheckOutDate" class="text-danger"></span>
                            </div>
                        </div>
                            @if (Model.Amenities != null && Model.Amenities.Any())
                            {
                                <div class="row mt-4">
                                    <div class="col-12">
                                <div class="card p-3 mt-4 mb-3" style="border-radius:12px; background-color:#f8f9fa;">
                                            <h4 class="fw-semibold mb-2">وسائل الراحة:</h4>
                                           <p class="mb-0"> @string.Join(", ", Model.Amenities)</p>
                                </div>
                                </div>
                                </div>

                            }


                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-success btn-lg ">
                            <i class="fas fa-check-circle me-2"></i> تأكيد الحجز
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-lg">إلغاء</a>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>