@model Hotel_Management_System.Models.DTOs.RoomTypeDTO
@{
    ViewData["Title"] = "إضافة نوع غرفة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="modal-container">
    <div class="modal-content">
        <div class="modal-header">
            <h2>إضافة نوع غرفة جديد</h2>
        </div>

        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Name">اسم النوع (مثال: ديلوكس)</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price">السعر لكل ليلة</label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <li style="margin-bottom: 15px;">
                <a asp-controller="RoomType" asp-action="Index" style="color: white; text-decoration: none;">
                    <i class="fas fa-layer-group"></i> إدارة الفئات
                </a>
            </li>
            <div class="form-group">
                <label asp-for="Occupancy">عدد الأشخاص</label>
                <input asp-for="Occupancy" type="number" class="form-control" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">الوصف</label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn-primary mt-3">حفظ</button>
        </form>
    </div>
</div>