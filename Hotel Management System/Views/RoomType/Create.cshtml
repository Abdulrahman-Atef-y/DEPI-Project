@model Hotel_Management_System.Models.DTOs.RoomTypeCreateDto
@{
    ViewData["Title"] = "إضافة نوع غرفة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm p-4" style="max-width: 800px; margin:auto; background:white; border-radius:12px;">
            <h3 class="fw-bold mb-4">إضافة نوع غرفة جديد</h3>

    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label fw-semibold">اسم النوع</label>
                <input asp-for="Name" class="form-control" placeholder="مثال: ديلوكس" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
            <label asp-for="Price" class="form-label fw-semibold">السعر لكل ليلة</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="مثال: 450" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           <div class="mb-3">
            <li style="margin-bottom: 15px;">
                <a asp-controller="RoomType" asp-action="Index" style="color: white; text-decoration: none;">
                    <i class="fas fa-layer-group"></i> إدارة الفئات
                </a>
            </li>
              </div>
           <div class="mb-3">
            <label asp-for="Occupancy" class="form-label fw-semibold">عدد الأشخاص</label>
            <input asp-for="Occupancy" type="number" class="form-control" placeholder="مثال: 2" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>

            <div class="mb-3">
            <label asp-for="Description" class="form-label fw-semibold">الوصف</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="أدخل وصف النوع..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        <div class="mb-3">
            <label for="RoomImages" class="form-label">صور الغرفة</label>
            <input type="file" name="RoomImages" class="form-control" multiple />
            <span asp-validation-for="RoomImages" class="text-danger"></span>
            <small class="text-muted">يمكنك تحميل أكثر من صورة</small>
        </div>
        </div>
        </div>
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-right"></i> العودة
            </a>

            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save"></i> حفظ
            </button>
        </div>
        </form>
 </div>
<link rel="stylesheet" href="~/css/admin-roomtype.css" />
