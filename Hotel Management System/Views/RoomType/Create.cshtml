@model Hotel_Management_System.Models.DTOs.RoomTypeCreateDto
@{
    ViewData["Title"] = "إضافة نوع غرفة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin-roomtype.css" asp-append-version="true" />


<div class="form-card">
    <h3>إضافة نوع غرفة جديد</h3>

    <form asp-action="Create" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold">اسم النوع</label>
                <input asp-for="Name" class="form-control" placeholder="مثال: ديلوكس" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
            <label asp-for="Price" class="form-label">السعر لكل ليلة</label>
            <input asp-for="Price" type="number" class="form-control" placeholder="مثال: 450" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           <div class="mb-3">
              </div>
           <div class="mb-3">
            <label asp-for="Occupancy" class="form-label">عدد الأشخاص</label>
            <input asp-for="Occupancy" type="number" class="form-control" placeholder="مثال: 2" />
                <span asp-validation-for="Occupancy" class="text-danger"></span>
            </div>
            <div class="mb-3">
            <label asp-for="Description" class="form-label">الوصف</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="أدخل وصف النوع..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Amenities" class="form-label">وسائل الراحة</label>
                <div class="amenities-container">
                    @foreach (var amenity in Model.AvailableAmenities)
                    {
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox"
                                   name="Amenities" value="@amenity.Value"
                            @(Model.Amenities.Contains(amenity.Value) ? "checked" : "") />
                            <label class="form-check-label">@amenity.Text</label>
                        </div>
                    }
                </div>
                <span asp-validation-for="Amenities" class="text-danger"></span>
            </div>
        <div class="mb-3">
            <label for="RoomImages" class="form-label">صور الغرفة</label>
            <input type="file" name="RoomImages" class="form-control" multiple />
            <span asp-validation-for="RoomImages" class="text-danger"></span>
            <small class="text-muted">يمكنك تحميل أكثر من صورة</small>
        </div>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary px-4">
                <i class="fas fa-save"></i> حفظ
            </button>
            <a asp-action="Index" class="btn btn-secondary" style="text-decoration:none">
                <i class="fas fa-arrow-right"></i> العودة
            </a>

        </div>
        </form>
 </div>