@model Hotel_Management_System.Models.DTOs.RoomTypeDTO
@{
    ViewData["Title"] = "تعديل نوع الغرفة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin-roomtype.css" asp-append-version="true" />

<h2>تعديل نوع الغرفة</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Occupancy"></label>
        <input asp-for="Occupancy" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="AmenitiesList">وسائل الراحة</label>
        <div class="amenities-container">
            @foreach (SelectListItem amenity in ViewBag.AvailableAmenities)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           name="AmenitiesList" value="@amenity.Value"
                    @(Model.AmenitiesList.Contains(amenity.Value) ? "checked" : "") />
                    <label class="form-check-label">@amenity.Text</label>
                </div>
            }
        </div>
        <span asp-validation-for="AmenitiesList" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">حفظ التغييرات</button>
</form>
