@model IEnumerable<Hotel_Management_System.Models.DTOs.RoomTypeDTO>
@{
    ViewData["Title"] = "إدارة أنواع الغرف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin-room.css" asp-append-version="true" />

<div class="admin-index-root">
    <div class="admin-header">
    <h2>إدارة أنواع الغرف</h2>
        <a asp-action="Create" class="admin-create-btn" style="text-decoration:none">
        <i class="fas fa-plus"></i> إضافة نوع جديد
    </a>
</div>

    <div class="admin-table-wrapper">
        <div class="admin-table-container">
            <table class="table admin-table">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>السعر</th>
                <th>السعة</th>
                <th>الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Occupancy</td>
                    <td>
                       <div class="admin-action-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="admin-action-btn admin-edit" style="text-decoration:none">
                                <i class="fas fa-edit"></i> تعديل
                            </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                              onsubmit="return confirm('هل أنت متأكد؟');">
                           <button type="submit" class="admin-action-btn admin-delete">
                                <i class="fas fa-trash"></i> حذف
                            </button>
                        </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>