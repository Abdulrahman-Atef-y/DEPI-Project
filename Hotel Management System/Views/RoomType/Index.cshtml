@model IEnumerable<Hotel_Management_System.Models.DTOs.RoomTypeDTO>
@{
    ViewData["Title"] = "إدارة أنواع الغرف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>إدارة أنواع الغرف</h2>
    <a asp-action="Create" class="btn-primary" style="text-decoration:none;">
        <i class="fas fa-plus"></i> إضافة نوع جديد
    </a>
</div>

<div class="table-responsive" style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <table class="table" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>السعر</th>
                <th>السعة</th>
                <th class="text-center">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.Occupancy</td>
                    <td class="text-center">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                              onsubmit="return confirm('هل أنت متأكد؟');">
                            <button type="submit" class="btn btn-link p-0" style="color: #e74c3c;">
                                <i class="fas fa-trash"></i> حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<link rel="stylesheet" href="~/css/admin-roomtype.css" />