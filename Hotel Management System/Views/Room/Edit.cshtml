@using Data_Access_Layer.Entities
@model Hotel_Management_System.Models.DTOs.RoomDTO
@{
    ViewData["Title"] = "تعديل الغرفة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>تعديل الغرفة</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group mb-2">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Floor"></label>
        <input asp-for="Floor" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label asp-for="Status"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<roomStatus>()">
        </select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="RoomTypeId"></label>
        <select asp-for="RoomTypeId" class="form-control" asp-items="Model.RoomTypeList"></select>
    </div>

    <button type="submit" class="btn btn-primary mt-2">حفظ التغييرات</button>
</form>
