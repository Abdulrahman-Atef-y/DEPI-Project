@model IEnumerable<Hotel_Management_System.Models.DTOs.RoomDTO>
@{
    ViewData["Title"] = "إدارة الغرف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4" style="display:flex; justify-content:space-between;">
    <h2>إدارة الغرف</h2>
    <a asp-action="Create" class="btn-primary" style="text-decoration:none;">
        <i class="fas fa-plus"></i> إضافة غرفة جديدة
    </a>
</div>

<div class="table-responsive" style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <table class="table" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="border-bottom: 2px solid #eee; text-align: right;">
                <th style="padding: 15px;">صورة الغرفة</th>
                <th style="padding: 15px;">رقم الغرفة</th>
                <th style="padding: 15px;">الطابق</th>
                <th style="padding: 15px;">الحالة</th>
                <th style="padding: 15px;">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 15px; width: 80px;">
                        <img src="@(item.RoomTypeImageUrl ?? "/img/roomtypes/default-room.jpg")"
                             alt="Room Type Image"
                             style="width: 60px; height: 60px; object-fit: cover; border-radius: 6px;" />
                    </td>
                    <td style="padding: 15px;">@item.RoomNumber</td>
                    <td style="padding: 15px;">@item.Floor</td>
                    <td style="padding: 15px;">
                        <span class="badge" style="padding: 5px 10px; border-radius: 15px; background: #e8f5e9; color: #2e7d32;">
                            @item.Status
                        </span>
                    </td>
                    <td style="padding: 15px;">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                              onsubmit="return confirm('هل أنت متأكد من حذف هذه الغرفة؟');">
                            <button type="submit" class="btn btn-sm btn-danger" style="color:white; background:#e74c3c;">
                                حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>