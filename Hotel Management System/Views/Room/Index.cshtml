@model IEnumerable<Hotel_Management_System.Models.DTOs.RoomDTO>
@{
    ViewData["Title"] = "إدارة الغرف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4" style="display:flex; justify-content:space-between;">
    <h2>إدارة الغرف</h2>
    <a asp-action="Create" class="btn-primary" style="text-decoration:none;">
        <i class="fas fa-plus"></i> إضافة غرفة جديدة
    </a>
</div>

<div class="table-responsive" style="background: white; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0,0,0,0.1);">
    <table class="table" style="width: 100%; border-collapse: collapse;">
        <thead>
            <tr style="border-bottom: 2px solid #eee; text-align: center;">
                <th style="padding: 10px; width: 90px;text-align:center; vertical-align: middle;">صورة الغرفة</th>
                <th style="padding: 10px; width: 60px;text-align:center; vertical-align: middle;">رقم الغرفة</th>
                <th style="padding: 10px; width: 60px;text-align:center; vertical-align: middle;">الطابق</th>
                <th style="padding: 10px; width: 100px;text-align:center; vertical-align: middle;">الحالة</th>
                <th style="padding: 10px; width: 120px;text-align:center; vertical-align: middle;">الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr style="border-bottom: 1px solid #eee;">
                    <td style="padding: 10px; width: 90px; text-align:center;">
                       <img src="@item.RoomTypeImageUrl"
                        alt="Room Type Image" style="width: 400px; height: 200px; object-fit: cover; border-radius: 6px;" /> 
                    </td>
                    <td style="padding: 10px; width: 60px; text-align:center;">@item.RoomNumber</td>
                    <td style="padding: 10px; width: 60px; text-align:center;">@item.Floor</td>
                    <td style="padding: 10px;width: 100px; text-align:center;">
                        <span class="badge" style="padding: 5px 10px; border-radius: 15px; background: #e8f5e9; color: #2e7d32;">
                            @item.Status
                        </span>
                    </td>
                    <td style="padding:10px; width: 120px; text-align:center;">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                              onsubmit="return confirm('هل أنت متأكد من حذف هذه الغرفة؟');">
                            <button type="submit" class="btn btn-sm btn-danger" style="color:white; background:#e74c3c;">
                                حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>