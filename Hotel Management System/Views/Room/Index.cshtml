@model IEnumerable<Hotel_Management_System.Models.DTOs.RoomDTO>
@{
    ViewData["Title"] = "إدارة الغرف";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/css/admin-room.css" asp-append-version="true" />

<div class="admin-index-root">
<div class="admin-header">
    <h2 class="admin-title">إدارة الغرف</h2>
    <a asp-action="Create" class="admin-create-btn">
        <i class="fas fa-plus"></i> إضافة غرفة جديدة
    </a>
</div>
<div class="admin-table-wrapper">
<div class="admin-table-container">
    <table class="table admin-table">
        <thead>
            <tr>
                <th>اسم النوع</th>
                <th>صورة الغرفة</th>
                <th >رقم الغرفة</th>
                <th >الطابق</th>
                <th >الحالة</th>
                <th >الإجراءات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr >
                    <td>@item.RoomTypeName</td>
                    <td>
                        <img src="@item.RoomTypeImageUrl" class="admin-img"
                        alt="Room Type Image" /> 
                    </td>
                    <td>@item.RoomNumber</td>
                    <td>@item.Floor</td>
                    <td >
                        <span class="status-badge" >
                            @item.Status
                        </span>
                    </td>
                      <td class="admin-action-group">
                          <a asp-action="Edit" asp-route-id="@item.Id" class="admin-action-btn admin-edit">
                                تعديل
                          </a>
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                          onsubmit="return confirm('هل أنت متأكد من حذف هذه الغرفة؟');" style="display:inline;">
                            <button type="submit" class="admin-action-btn admin-delete">
                                حذف
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>