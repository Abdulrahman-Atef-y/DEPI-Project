@using Data_Access_Layer.Entities
@model Hotel_Management_System.Models.DTOs.RoomDTO
@{
    ViewData["Title"] = "إضافة غرفة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-card">
    <h3 class="mb-4">إضافة غرفة جديدة</h3>
    <link rel="stylesheet" href="~/css/admin-roomtype.css" asp-append-version="true" />
        <form asp-action="Create">
            <div class="mb-3">
                <label asp-for="RoomNumber" class="form-label">رقم الغرفة</label>
                <input asp-for="RoomNumber" class="form-control" placeholder="101" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>

        <div class="mb-3">
                <label asp-for="Floor">الطابق</label>
                <input asp-for="Floor" class="form-control" placeholder="1" />
                <span asp-validation-for="Floor" class="text-danger"></span>
            </div>

        <div class="mb-3">
                <label asp-for="RoomTypeId">نوع الغرفة</label>
                <select asp-for="RoomTypeId" asp-items="Model.RoomTypeList" class="form-control">
                    <option value="">-- اختر النوع --</option>
                </select>
                <span asp-validation-for="RoomTypeId" class="text-danger"></span>
            </div>

        <div class="mb-3">
                <label asp-for="Status">الحالة</label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<roomStatus>()" class="form-control"></select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> إضافة
            </button>
            <a asp-action="Index" class="btn btn-secondary" style="text-decoration:none">
                <i class="fas fa-arrow-right"></i> العودة
            </a>
        </div>
        </form>
    </div>
</div>
